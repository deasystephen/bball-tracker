# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bball_tracker?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# WorkOS Authentication
WORKOS_API_KEY="sk_test_..."
WORKOS_CLIENT_ID="client_..."
WORKOS_ENVIRONMENT="sandbox"
WORKOS_REDIRECT_URI="http://localhost:3000/api/v1/auth/callback"
# For email/password auth using AuthKit (recommended):
WORKOS_PROVIDER="authkit"
# Alternative options (set ONE of the following if not using authkit):
# WORKOS_CONNECTION_ID=""  # For custom connections (Magic Link, OTP, etc.)
# WORKOS_ORGANIZATION_ID=""  # For organization-based SSO
# Note: If none are set, the code defaults to WORKOS_PROVIDER="authkit"

# Kafka (Confluent Cloud)
KAFKA_BROKERS=""
KAFKA_CLIENT_ID="bball-tracker-backend"
KAFKA_GROUP_ID="bball-tracker-group"
KAFKA_API_KEY=""
KAFKA_API_SECRET=""

# AWS
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# CORS
CORS_ORIGIN="http://localhost:19006"

# WebSocket
WS_PORT=3001

