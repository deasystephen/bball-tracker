// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================================
// ENUMS
// =============================================================================

enum UserRole {
  PLAYER
  PARENT
  COACH
  ADMIN
}

enum GuardianRelationship {
  MOTHER
  FATHER
  GUARDIAN
  OTHER
}

enum TeamRoleType {
  HEAD_COACH
  ASSISTANT_COACH
  TEAM_MANAGER
  CUSTOM
}

enum GameStatus {
  SCHEDULED
  IN_PROGRESS
  FINISHED
  CANCELLED
}

enum GameEventType {
  SHOT
  REBOUND
  ASSIST
  TURNOVER
  FOUL
  SUBSTITUTION
  STEAL
  BLOCK
  TIMEOUT
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
  CANCELLED
}

enum SubscriptionTier {
  FREE
  PREMIUM
  LEAGUE
}

enum RsvpStatus {
  YES
  NO
  MAYBE
}

// =============================================================================
// USER & AUTHENTICATION
// =============================================================================

model User {
  id                String    @id @default(uuid())
  workosUserId      String?   @unique
  email             String?   @unique
  name              String
  emailVerified     Boolean   @default(false)
  profilePictureUrl String?
  role              UserRole  @default(PLAYER)
  subscriptionTier    SubscriptionTier @default(FREE)
  subscriptionExpiresAt DateTime?
  isManaged         Boolean   @default(false)
  managedById       String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  managedBy           User?             @relation("ManagedPlayers", fields: [managedById], references: [id])
  managedPlayers      User[]            @relation("ManagedPlayers")
  teamMembers         TeamMember[]
  teamStaff           TeamStaff[]
  gameEvents          GameEvent[]
  refreshTokens       RefreshToken[]
  sentInvitations     TeamInvitation[]  @relation("SentInvitations")
  receivedInvitations TeamInvitation[]  @relation("PlayerInvitations")
  leagueAdmins        LeagueAdmin[]
  guardiansAsParent   Guardian[]        @relation("GuardianParent")
  guardiansAsChild    Guardian[]        @relation("GuardianChild")
  playerStats         PlayerStats[]
  gameRsvps           GameRsvp[]
  pushTokens          PushToken[]
  announcements       Announcement[]

  @@index([email])
  @@index([role])
  @@index([workosUserId])
  @@index([managedById])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

// =============================================================================
// GUARDIAN (Parent-Child Relationship)
// =============================================================================

model Guardian {
  id           String               @id @default(uuid())
  parentId     String
  childId      String
  relationship GuardianRelationship
  isPrimary    Boolean              @default(false)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt

  parent User @relation("GuardianParent", fields: [parentId], references: [id], onDelete: Cascade)
  child  User @relation("GuardianChild", fields: [childId], references: [id], onDelete: Cascade)

  @@unique([parentId, childId])
  @@index([parentId])
  @@index([childId])
}

// =============================================================================
// LEAGUE & SEASON
// =============================================================================

model League {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  seasons Season[]
  admins  LeagueAdmin[]

  @@index([name])
}

model Season {
  id        String    @id @default(uuid())
  leagueId  String
  name      String    // e.g., "Spring 2024", "Fall 2024"
  startDate DateTime?
  endDate   DateTime?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  teams  Team[]

  @@unique([leagueId, name])
  @@index([leagueId])
  @@index([isActive])
}

model LeagueAdmin {
  id        String   @id @default(uuid())
  leagueId  String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([leagueId, userId])
  @@index([leagueId])
  @@index([userId])
}

// =============================================================================
// TEAM & ROLES
// =============================================================================

model Team {
  id        String   @id @default(uuid())
  name      String
  seasonId  String
  chatLink  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  season        Season           @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  members       TeamMember[]
  staff         TeamStaff[]
  roles         TeamRole[]
  games         Game[]
  invitations   TeamInvitation[]
  teamStats     TeamStats[]
  announcements Announcement[]

  @@index([seasonId])
  @@index([name])
  @@index([createdAt])
}

model TeamRole {
  id          String       @id @default(uuid())
  teamId      String
  type        TeamRoleType
  name        String       // "Head Coach", "Assistant Coach", "Team Manager", or custom
  description String?

  // Permissions
  canManageTeam   Boolean @default(false) // Full team admin
  canManageRoster Boolean @default(false) // Add/remove players, send invitations
  canTrackStats   Boolean @default(false) // Live game stat tracking
  canViewStats    Boolean @default(false) // View player/team statistics
  canShareStats   Boolean @default(false) // Share/export stats

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team  Team        @relation(fields: [teamId], references: [id], onDelete: Cascade)
  staff TeamStaff[]

  @@unique([teamId, name])
  @@index([teamId])
  @@index([type])
}

model TeamStaff {
  id        String   @id @default(uuid())
  teamId    String
  userId    String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role TeamRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId, roleId])
  @@index([teamId])
  @@index([userId])
  @@index([roleId])
}

model TeamMember {
  id           String   @id @default(uuid())
  teamId       String
  playerId     String
  jerseyNumber Int?
  position     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  player User @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([teamId, playerId])
  @@index([teamId])
  @@index([playerId])
}

model TeamInvitation {
  id           String           @id @default(uuid())
  teamId       String
  playerId     String
  invitedById  String
  status       InvitationStatus @default(PENDING)
  token        String           @unique
  jerseyNumber Int?
  position     String?
  message      String?
  expiresAt    DateTime
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  acceptedAt   DateTime?
  rejectedAt   DateTime?

  team      Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  player    User @relation("PlayerInvitations", fields: [playerId], references: [id], onDelete: Cascade)
  invitedBy User @relation("SentInvitations", fields: [invitedById], references: [id])

  @@unique([teamId, playerId, status], name: "unique_pending_invitation")
  @@index([playerId])
  @@index([teamId])
  @@index([status])
  @@index([token])
  @@index([expiresAt])
  @@index([status, expiresAt])
}

// =============================================================================
// GAMES & EVENTS
// =============================================================================

model Game {
  id        String     @id @default(uuid())
  teamId    String
  opponent  String
  date      DateTime
  status    GameStatus @default(SCHEDULED)
  homeScore Int        @default(0)
  awayScore Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  team        Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  events      GameEvent[]
  playerStats PlayerStats[]
  teamStats   TeamStats[]
  rsvps       GameRsvp[]

  @@index([teamId])
  @@index([date])
  @@index([status])
  @@index([teamId, status])
  @@index([teamId, date])
}

model GameEvent {
  id        String        @id @default(uuid())
  gameId    String
  playerId  String?
  eventType GameEventType
  timestamp DateTime      @default(now())
  metadata  Json          @default("{}")
  createdAt DateTime      @default(now())

  game   Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player User? @relation(fields: [playerId], references: [id], onDelete: SetNull)

  @@index([gameId])
  @@index([playerId])
  @@index([eventType])
  @@index([timestamp])
  @@index([gameId, playerId])
  @@index([gameId, eventType])
}

// =============================================================================
// STATISTICS
// =============================================================================

model PlayerStats {
  id                     String   @id @default(uuid())
  playerId               String
  gameId                 String
  points                 Int      @default(0)
  rebounds               Int      @default(0)
  assists                Int      @default(0)
  steals                 Int      @default(0)
  blocks                 Int      @default(0)
  turnovers              Int      @default(0)
  fouls                  Int      @default(0)
  fieldGoalsMade         Int      @default(0)
  fieldGoalsAttempted    Int      @default(0)
  threePointersMade      Int      @default(0)
  threePointersAttempted Int      @default(0)
  freeThrowsMade         Int      @default(0)
  freeThrowsAttempted    Int      @default(0)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  player User @relation(fields: [playerId], references: [id], onDelete: Cascade)
  game   Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([playerId, gameId])
  @@index([playerId])
  @@index([gameId])
}

model TeamStats {
  id                   String   @id @default(uuid())
  teamId               String
  gameId               String
  points               Int      @default(0)
  rebounds             Int      @default(0)
  assists              Int      @default(0)
  turnovers            Int      @default(0)
  fieldGoalPercentage  Float    @default(0)
  threePointPercentage Float    @default(0)
  freeThrowPercentage  Float    @default(0)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([teamId, gameId])
  @@index([teamId])
  @@index([gameId])
}

// =============================================================================
// RSVP
// =============================================================================

model GameRsvp {
  id        String     @id @default(uuid())
  gameId    String
  userId    String
  status    RsvpStatus
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([gameId, userId])
  @@index([gameId])
  @@index([userId])
}

// =============================================================================
// PUSH NOTIFICATIONS
// =============================================================================

model PushToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  platform  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// =============================================================================
// ANNOUNCEMENTS
// =============================================================================

model Announcement {
  id        String   @id @default(uuid())
  teamId    String
  authorId  String
  title     String
  body      String
  createdAt DateTime @default(now())

  team   Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([teamId])
  @@index([authorId])
  @@index([teamId, createdAt])
}
